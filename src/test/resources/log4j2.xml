<Configuration status="INFO">
<Properties>
<Property name="basePath">./logs</Property>
</Properties>


<Appenders>
<Console name="Console" target="SYSTEM_OUT">
<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
</Console>


<RollingFile name="File" fileName="${basePath}/Tourwit_automation.log" filePattern="${basePath}/Tourwit_automation-%d{yyyy-MM-dd}.log">
<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
<sizeBasedTriggeringPolicy size="5000"/>
</RollingFile>

</Appenders>

<Loggers>
<Root level="Info">
<AppenderRef ref="File"/>
</Root>
</Loggers>


</Configuration>